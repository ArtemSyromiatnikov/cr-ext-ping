{
  "manifest_version": 2,

  "name": "Ping",
  "description": "This extension pings web sites!",
  "version": "0.4.9",
  "icons": {
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  },
  "background": {
      "page": "bgIndex.html"
  },
  "browser_action": {
      "default_icon": "img/icon.png",
      "default_popup": "index.html"
  },
  "permissions": [
      "notifications",
      "*://*/"
  ]
}
